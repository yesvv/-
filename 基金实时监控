    <script>
        let monitoringInterval = null;
        let fundCodes = [];
        let alertThreshold = 3;
        let valueChart = null;
        let changeChart = null;
        let fundHistory = {};

        function initCharts() {
            const valueCtx = document.getElementById('valueChart').getContext('2d');
            const changeCtx = document.getElementById('changeChart').getContext('2d');
            
            valueChart = new Chart(valueCtx, {
                type: 'line',
                data: { labels: [], datasets: [] },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { 
                            position: 'top',
                            labels: { 
                                boxWidth: 30,
                                padding: 10,
                                font: { size: 11 }
                            }
                        } 
                    },
                    scales: { 
                        y: { 
                            beginAtZero: false,
                            ticks: { font: { size: 11 } }
                        },
                        x: {
                            ticks: { 
                                font: { size: 10 },
                                maxRotation: 45,
                                minRotation: 45
                            }
                        }
                    }
                }
            });
            
            changeChart = new Chart(changeCtx, {
                type: 'bar',
                data: { 
                    labels: [], 
                    datasets: [{ 
                        label: 'æ¶¨è·Œå¹… (%)', 
                        data: [], 
                        backgroundColor: [] 
                    }] 
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { display: false }
                    },
                    scales: { 
                        y: { 
                            beginAtZero: true,
                            ticks: { font: { size: 11 } }
                        },
                        x: {
                            ticks: { 
                                font: { size: 10 },
                                maxRotation: 45,
                                minRotation: 45
                            }
                        }
                    }
                }
            });
        }

        function getFundData(fundCode) {
            return new Promise((resolve) => {
                const script = document.createElement('script');
                window.jsonpgz = function(data) {
                    resolve({
                        code: data.fundcode,
                        name: data.name,
                        net_value: parseFloat(data.dwjz),
                        estimated_value: parseFloat(data.gsz),
                        change_percent: parseFloat(data.gszzl),
                        update_time: data.gztime,
                        success: true
                    });
                    document.body.removeChild(script);
                };
                script.src = `https://fundgz.1234567.com.cn/js/${fundCode}.js`;
                script.onerror = () => { 
                    resolve({success: false, code: fundCode}); 
                    document.body.removeChild(script); 
                };
                document.body.appendChild(script);
            });
        }

        function startMonitoring() {
            const input = document.getElementById('fundCodesInput').value.trim();
            alertThreshold = parseFloat(document.getElementById('alertThreshold').value) || 3;
            
            if (!input) {
                alert('è¯·è¾“å…¥åŸºé‡‘ä»£ç ï¼');
                return;
            }
            
            fundCodes = input.split(',').map(code => code.trim()).filter(code => code);
            
            if (fundCodes.length === 0) {
                alert('è¯·è¾“å…¥æœ‰æ•ˆçš„åŸºé‡‘ä»£ç ï¼');
                return;
            }
            
            document.getElementById('statusIndicator').className = 'status-dot status-running';
            document.getElementById('tableLoading').style.display = 'block';
            document.getElementById('fundTable').style.display = 'none';
            
            updateAllFunds();
            if (monitoringInterval) clearInterval(monitoringInterval);
            monitoringInterval = setInterval(updateAllFunds, 5000);
        }

        function stopMonitoring() {
            if (monitoringInterval) {
                clearInterval(monitoringInterval);
                monitoringInterval = null;
                document.getElementById('statusIndicator').className = 'status-dot status-stopped';
            }
        }

        async function updateAllFunds() {
            try {
                const promises = fundCodes.map(code => getFundData(code));
                const results = await Promise.all(promises);
                const currentTime = new Date().toLocaleTimeString('zh-CN');
                
                results.forEach(fund => {
                    if (fund.success) {
                        if (!fundHistory[fund.code]) {
                            fundHistory[fund.code] = { 
                                times: [], 
                                values: [], 
                                changes: [], 
                                name: fund.name 
                            };
                        }
                        
                        const shortTime = currentTime.substring(0, 5);
                        fundHistory[fund.code].times.push(shortTime);
                        fundHistory[fund.code].values.push(fund.estimated_value);
                        fundHistory[fund.code].changes.push(fund.change_percent);
                        
                        if (fundHistory[fund.code].times.length > 40) {
                            fundHistory[fund.code].times.shift();
                            fundHistory[fund.code].values.shift();
                            fundHistory[fund.code].changes.shift();
                        }
                    }
                });
                
                updateTable(results);
                updateCharts();
                updateStats(results);
                checkAlerts(results);
                
                document.getElementById('tableLoading').style.display = 'none';
                document.getElementById('fundTable').style.display = 'table';
                document.getElementById('updateTime').textContent = currentTime;
            } catch (error) {
                console.error('è·å–æ•°æ®å¤±è´¥:', error);
                document.getElementById('tableLoading').innerHTML = '<p style="color:#e74c3c;">æ•°æ®åŠ è½½å¤±è´¥ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥</p>';
            }
        }

        function updateTable(fundsData) {
            const tbody = document.getElementById('fundTableBody');
            tbody.innerHTML = '';
            
            fundsData.forEach(fund => {
                if (!fund.success) {
                    const row = tbody.insertRow();
                    row.innerHTML = `<td colspan="6" style="color:#999;">åŸºé‡‘ ${fund.code} åŠ è½½å¤±è´¥</td>`;
                    return;
                }
                
                const row = tbody.insertRow();
                const changeClass = fund.change_percent >= 0 ? 'change-positive' : 'change-negative';
                const changeSymbol = fund.change_percent >= 0 ? 'ğŸ“ˆ' : 'ğŸ“‰';
                
                row.innerHTML = `
                    <td>${fund.code}</td>
                    <td style="max-width:150px;overflow:hidden;text-overflow:ellipsis;" title="${fund.name}">${fund.name}</td>
                    <td>${fund.net_value.toFixed(4)}</td>
                    <td>${fund.estimated_value.toFixed(4)}</td>
                    <td class="${changeClass}">${changeSymbol} ${fund.change_percent > 0 ? '+' : ''}${fund.change_percent.toFixed(2)}%</td>
                    <td>${fund.update_time}</td>
                `;
            });
        }

        function updateCharts() {
            const colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#FFA07A', '#98D8C8', '#F7DC6F', '#BB8FCE', '#85C1E2'];
            
            valueChart.data.datasets = [];
            let commonTimes = [];
            
            Object.keys(fundHistory).forEach((code, index) => {
                const history = fundHistory[code];
                if (history.times.length > 0) {
                    commonTimes = history.times;
                    const shortName = history.name.length > 8 ? history.name.substring(0, 8) + '..' : history.name;
                    valueChart.data.datasets.push({
                        label: `${shortName}(${code})`,
                        data: history.values,
                        borderColor: colors[index % colors.length],
                        backgroundColor: colors[index % colors.length] + '20',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: false,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    });
                }
            });
            
            valueChart.data.labels = commonTimes;
            valueChart.update('none');

            const labels = [], data = [], bgColors = [];
            Object.keys(fundHistory).forEach(code => {
                const history = fundHistory[code];
                if (history.changes.length > 0) {
                    const shortName = history.name.length > 6 ? history.name.substring(0, 6) : history.name;
                    labels.push(`${shortName}\n${code}`);
                    const latestChange = history.changes[history.changes.length - 1];
                    data.push(latestChange);
                    bgColors.push(latestChange >= 0 ? 'rgba(231, 76, 60, 0.8)' : 'rgba(39, 174, 96, 0.8)');
                }
            });
            
            changeChart.data.labels = labels;
            changeChart.data.datasets[0].data = data;
            changeChart.data.datasets[0].backgroundColor = bgColors;
            changeChart.update('none');
        }

        function updateStats(fundsData) {
            const validFunds = fundsData.filter(f => f.success);
            const riseCount = validFunds.filter(f => f.change_percent > 0).length;
            const fallCount = validFunds.filter(f => f.change_percent < 0).length;
            const avgChange = validFunds.reduce((sum, f) => sum + f.change_percent, 0) / validFunds.length || 0;
            
            document.getElementById('fundCount').textContent = validFunds.length;
            document.getElementById('riseCount').textContent = riseCount;
            document.getElementById('fallCount').textContent = fallCount;
            
            const avgEl = document.getElementById('avgChange');
            avgEl.textContent = (avgChange > 0 ? '+' : '') + avgChange.toFixed(2) + '%';
            avgEl.className = 'stat-value ' + (avgChange >= 0 ? 'positive' : 'negative');
        }

        function checkAlerts(fundsData) {
            const alerts = fundsData.filter(f => f.success && Math.abs(f.change_percent) >= alertThreshold);
            
            if (alerts.length > 0) {
                const alertBox = document.getElementById('alertBox');
                const alertMessage = document.getElementById('alertMessage');
                
                const messages = alerts.map(f => 
                    `${f.name}(${f.code}) ${f.change_percent > 0 ? 'å¤§æ¶¨' : 'å¤§è·Œ'} ${f.change_percent.toFixed(2)}%`
                ).join('ï¼›');
                
                alertMessage.textContent = messages;
                alertBox.classList.add('show');
                
                if (navigator.vibrate) {
                    navigator.vibrate([200, 100, 200]);
                }
                
                setTimeout(() => {
                    alertBox.classList.remove('show');
                }, 8000);
            }
        }

        window.onload = function() { 
            initCharts(); 
            console.log('ğŸ“Š åŸºé‡‘ç›‘æ§ç³»ç»Ÿå·²å¯åŠ¨');
        };
        
        window.onbeforeunload = function() { 
            stopMonitoring(); 
        };
    </script>
</body>
